  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <%- include('../partials/links') %>
    <title>QR Arc</title>
  </head>
  <body>
    <%- include('../partials/navegacion') %>
    <%- include('../partials/hamburguesa') %>

    <section id="principal">
      <div id="todos-codigosqr" class="info-codigos">
        <h1 class="">TUS QR</h1>
        <div id="">
            <div class="div-codigosqr">
              <% if (codigos.length > 0) { %>
                <% codigos.forEach(item => { %>
                  <div class="imagenes-like-dislke">
                    <img style="width: 200px;" src="<%= item.codigoqrURL %>" draggable="false" alt="">
                    <div id="iconos">
                      <a href="/delete/<%= item.id %>"><i class="fa-solid fa-trash"></i>Eliminar</a>
                      <a href="/edit/<%= item.id %>"><i class="fa-solid fa-pen-to-square"></i>Editar</a>
                  </div>
                </div>
                <% }); %>
                <% } else { %>
                  <div id="length0">
                    <p>No tienes codigos QR guardados.</p>
                    <a href="generate-qr"><button class="custom">Crear Code QR</button></a>
                  </div>
                <% } %>
            </div>
        </div>
      </div>

    </section>
    <%- include('../partials/footer') %>



