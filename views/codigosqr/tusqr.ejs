<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/decoracion_pags.css">
    <%- include('../partials/links') %>
    <title>QR Arc</title>
  </head>
  <body>
    <%- include('../partials/navegacion') %>
    <%- include('../partials/hamburguesa') %>
    <section id="principal">
      <%- include('../partials/decoracion') %>
      <div id="todos-codigosqr" class="info-codigos">
        <h1 class="">TUS QR</h1>
        <div id="">
            <div class="div-codigosqr">
              <% if (codigos.length > 0) { %>
                <% codigos.forEach(item => { %>
                  <div class="imagenes-like-dislke">
                    <% if (item.qr_tipo === 'codigosqr_texto') { %>
                      <h2>QR: Texto</h2>
                    <% } else if (item.qr_tipo === 'codigosqr_wifi') { %>
                      <h2>QR: WiFi</h2>
                    <% } else if (item.qr_tipo === 'codigosqr_sms') { %>
                      <h2>QR: SMS</h2>
                    <% } else if (item.qr_tipo === 'codigosqr_tel') { %>
                      <h2>QR: Tel</h2>
                    <% } else if (item.qr_tipo === 'codigosqr_vcard') { %>
                      <h2>QR: vCard</h2>
                    <% } else if (item.qr_tipo === 'codigosqr_url') { %>
                      <h2>QR: URL</h2>
                    <% } else if (item.qr_tipo === 'codigosqr_geo') { %>
                      <h2>QR: Geo</h2>
                    <% } else if (item.qr_tipo === 'codigosqr_redes') { %>
                      <h2>QR: Redes</h2>
                    <% } else if (item.qr_tipo === 'codigosqr_pdf') { %>
                      <h2>QR: PDF</h2>
                    <% } %>

                    <img style="width: 200px;" src="<%= item.codigoqrURL %>"  alt="">
                    <div id="iconos">

                      <% if (item.qr_tipo === 'codigosqr_texto') { %>
                      <a href="/delete/codigosqr_texto/<%= item.id %>"><i class="fa-solid fa-trash"></i> Eliminar</a>

                    <% } else if (item.qr_tipo === 'codigosqr_wifi') { %>
                      <a href="/delete/codigosqr_wifi/<%= item.id %>"><i class="fa-solid fa-trash"></i> Eliminar</a>

                    <% } else if (item.qr_tipo === 'codigosqr_sms') { %>
                      <a href="/delete/codigosqr_sms/<%= item.id %>"><i class="fa-solid fa-trash"></i> Eliminar</a>

                    <% } else if (item.qr_tipo === 'codigosqr_tel') { %>
                      <a href="/delete/codigosqr_tel/<%= item.id %>"><i class="fa-solid fa-trash"></i> Eliminar</a>

                    <% } else if (item.qr_tipo === 'codigosqr_vcard') { %>
                      <a href="/delete/codigosqr_vcard/<%= item.id %>"><i class="fa-solid fa-trash"></i> Eliminar</a>

                    <% } else if (item.qr_tipo === 'codigosqr_url') { %>
                      <a href="/delete/codigosqr_url/<%= item.id %>"><i class="fa-solid fa-trash"></i> Eliminar</a>

                    <% } else if (item.qr_tipo === 'codigosqr_geo') { %>
                      <a href="/delete/codigosqr_geo/<%= item.id %>"><i class="fa-solid fa-trash"></i> Eliminar</a>
                      
                    <% } else if (item.qr_tipo === 'codigosqr_redes') { %>
                      <a href="/delete/codigosqr_redes/<%= item.id %>"><i class="fa-solid fa-trash"></i> Eliminar</a>

                    <% } else if (item.qr_tipo === 'codigosqr_pdf') { %>
                      <a href="/delete/codigosqr_pdf/<%= item.id %>"><i class="fa-solid fa-trash"></i> Eliminar</a>
                    <% } %>



                      <% if (item.qr_tipo === 'codigosqr_texto') { %>
                        <a href="/edit/codigosqr_texto/<%= item.id %>"><i class="fa-solid fa-pen-to-square"></i> Editar</a>

                      <% } else if (item.qr_tipo === 'codigosqr_wifi') { %>
                        <a href="/edit/codigosqr_wifi/<%= item.id %>"><i class="fa-solid fa-pen-to-square"></i> Editar</a>

                      <% } else if (item.qr_tipo === 'codigosqr_sms') { %>
                        <a href="/edit/codigosqr_sms/<%= item.id %>"><i class="fa-solid fa-pen-to-square"></i> Editar</a>

                      <% } else if (item.qr_tipo === 'codigosqr_tel') { %>
                        <a href="/edit/codigosqr_tel/<%= item.id %>"><i class="fa-solid fa-pen-to-square"></i> Editar</a>

                      <% } else if (item.qr_tipo === 'codigosqr_vcard') { %>
                        <a href="/edit/codigosqr_vcard/<%= item.id %>"><i class="fa-solid fa-pen-to-square"></i> Editar</a>

                      <% } else if (item.qr_tipo === 'codigosqr_url') { %>
                        <a href="/edit/codigosqr_url/<%= item.id %>"><i class="fa-solid fa-pen-to-square"></i> Editar</a>

                      <% } else if (item.qr_tipo === 'codigosqr_geo') { %>
                        <a href="/edit/codigosqr_geo/<%= item.id %>"><i class="fa-solid fa-pen-to-square"></i> Editar</a>

                      <% } else if (item.qr_tipo === 'codigosqr_redes') { %>
                        <a href="/edit/codigosqr_redes/<%= item.id %>"><i class="fa-solid fa-pen-to-square"></i> Editar</a>

                      <% } else if (item.qr_tipo === 'codigosqr_pdf') { %>
                        <a href="/edit/codigosqr_pdf/<%= item.id %>"><i class="fa-solid fa-pen-to-square"></i> Editar</a>
                        
                      <% } %>
                  </div>
                </div>
                <% }); %>
                <% } else { %>
                  <div id="length0">
                    <p>No tienes codigos QR guardados.</p>
                    <a href="generate-qr"><button class="custom">Crear Code QR</button></a>
                  </div>
                <% } %>
            </div>
        </div>
      </div>

    </section>
    <%- include('../partials/footer') %>



