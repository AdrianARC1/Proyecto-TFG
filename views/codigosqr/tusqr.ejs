<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <%- include('../partials/links') %>
    <title>QR Arc</title>
  </head>
  <body>
    <%- include('../partials/navegacion') %>
    <section id="principal">
      <div class="div-qr">
        <h1 class="">TUS QR</h1>
        <% if (codigos.length > 0) { %>
          <% codigos.forEach(item => { %>
            <img style="width: 200px;" src="<%= item.codigoqrURL %>" draggable="false" alt="">
          <div id="iconos">
            <a href="/delete/<%= item.id %>"><i class="fa-solid fa-trash"></i>Delete</a>
            <a href="/edit/<%= item.id %>"><i class="fa-solid fa-pen-to-square"></i>Edit</a>
          </div>
          <% }); %>
          <% } else { %>
          <div>
            <p>No tienes codigos QR guardados.</p>
            <a href="/generate-qr"><h1>Crear codigo QR</h1></a>
          </div>
        <% } %>
      </div>
    </section>
  </body>
</html>
